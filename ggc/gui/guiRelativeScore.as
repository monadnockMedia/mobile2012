package com.mobile.ggc.gui {		import flash.display.MovieClip;	import com.greensock.TweenLite;		public class guiRelativeScore extends MovieClip {		var rel:Object = {};				var wide:Number = 205;				public function set score(o:Object):void		{			var offset:Number = 0;									for each (var s:String in ["Environment","Energy","Economy"]){								var ratio:Number = o.rel[s];				var myWide:Number = ratio*wide;				var thisMC = rel[s] as MovieClip;												TweenLite.to(thisMC, 1, {x:offset,width:myWide});									offset +=  ratio*wide;				//totalScore+=o[s]			}											  		}						public function guiRelativeScore() {			// constructor code							rel["Environment"] = this.rel1;				rel.Environment.gotoAndStop("Environment");				rel["Energy"] = this.rel2;				rel.Energy.gotoAndStop("Energy");				rel["Economy"] = this.rel3;				rel.Economy.gotoAndStop("Economy");		}	}	}