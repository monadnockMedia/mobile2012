package com.mobile.ggc {		import flash.display.MovieClip;		import flash.events.*;	public class sandBox extends MovieClip {		var game:ggGame;		var guiPlayers:Array = [];							public function sandBox() {		 	game = new ggGame();			game.addEventListener("configComplete", setupGui);			//this loads gamefile, and pushes configs to all classes.			game.gameFile = ("game.xml");						testBtn.addEventListener(MouseEvent.MOUSE_UP, test);			game.dealer.addEventListener(DealerEvent.SCORING, updateScore);		}				private function setupGui(e:Event):void		{			guiPlayers = [gui1,gui2,gui3];			for each (var gui:ggPlayerGui in guiPlayers){				gui.Players = game.players;			}		}				public function test(e:Event):void		{			trace("test");						game.players.thePlayers["Energy"].active = true;		}				public function updateScore(e:DealerEvent):void		{			scoreboard.score = e.data;		}					}	}